<!--pages/menu/menu.wxml-->
<view class="mpage {{!ui.Start?'withAnimate':''}}" style="width:{{ui.windowWidth}}px;left:{{ui.offsetLeft}}px;"
bindtouchstart="handlerStart" bindtouchmove="handlerMove" bindtouchcancel="handlerCancel" bindtouchend="handlerEnd">
    <scroll-view scroll-y style="height: 100%;" bindscroll="handlerScroll">
        <view class="search">
            <view class="avatar" catchtap="handlerAvatarTap">
                <image class="img" src="../../imgs/3.png"></image>
            </view>
        </view>
        <view class="item" wx:for="123123" wx:key="{{index}}">
            <image class="img" src="../../imgs/3.png"></image>
        </view>
    </scroll-view>
</view>
<view class="user"
 style="width: {{ui.menuWidth}}px">
    <view class="user-box">
        <view class="user-face-wrapper">
            <image class="user-face" src="../../imgs/3.png"></image>
        </view>
        <view class="one-menu" wx:for="1234" wx:key="{{index}}">
            <text>苟年妲己</text>
        </view>
    </view>
</view>

