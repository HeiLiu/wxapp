/* pages/posts/posts-detail/posts-detail.wxss */

.container {
    display: flex;
    flex-direction: column;
}

.head-image {
    width: 100%;
    height: 460rpx;
    background-color: #234234;
}
.music{
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    top:180rpx;
    margin-left: -51rpx;
}
.author-date {
    flex-direction: row;
    margin-right: 30rpx;
    margin-top: 20rpx;
}

.avatar {
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
    margin-left: 5px;
}

.author {
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    color: #666;
}

.const-text {
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
}

.date {
    font-size: 24rpx;
    margin-left: 30rpx;
    /* vertical-align: middle; */
    color: #999;
}

.title {
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    letter-spacing: 2px;
    color: #4b556c;
}

.tool {
    margin-top: 20rpx;
}

.circle-img image{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
    width: 90rpx;
    height: 90rpx;
}
.line{
    width: 660rpx;
    height: 1px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    z-index: -99;
}
.detail{
    color: #666666;
    margin: 20rpx 30rpx 0 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
}