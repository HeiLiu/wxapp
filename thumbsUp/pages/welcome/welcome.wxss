.container{
   display:flex; 
   flex-direction: column;
   align-items: center;
   background-color: #EF0101;
   height: 100vh;
}
.user-avatar{
  margin-top: 160rpx;
  width: 200rpx;
  height: 200rpx;
   
}
.user-name{
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.motto{
  font-size: 22rpx;
  font-weight: bolder;
  line-height: 80rpx;
}
.motto-container{
  margin-top: 200rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center; 
}