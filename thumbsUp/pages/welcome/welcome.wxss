   background-color: #EF0101;
   width: 100%;
   height: 100vh;
}
.zan{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  z-index: 999;
}
/* 怎么布局slogen */
.slogan{
  z-index: 999;
}
.container:before{
  content: '';
  position: absolute;
  top: 0;
  width: 100vh;
  height: 50vh;
  background-color: burlywood;
  border-bottom: 1px solid yellow;
}
