.animation{
  -webkit-animation: rotate 2s linear;
  animation: rotate 2s linear;
}
@keyframes rotate{
  0%{
    -webkit-transform: rotate(0);
    transform: rotate(0);
  }
  50%{
    -webkit-transform: rotate(-180deg);
    transform: rotate(-180deg);
  }
  100%{
    -webkit-transform: rotate(-360deg);
    transform: rotate(-360deg);
  }
}