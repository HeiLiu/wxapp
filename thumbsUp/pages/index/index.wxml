<view class="cell">
  <view class="cell__bd">
    <textarea style="height:6em;" bindinput="onInputContent" value="{{entity.content}}" class="textarea" placeholder="这一刻的想法">
    </textarea>
  </view>
</view>
<!-- <view class="cell"> -->
<view class="cell__bd">
  <view class="upload">
    <view class="uploader__bd">
      <view class="uploader__files">
        <block wx:for="{{images}}" wx:key="{{item.id}}" style="margin: 0 auto;">
          <view class="uploader__file">
            <image bindlongpress="deleteTap" data-id="{{item.id}}" mode="aspectFill" class="uploader__img" src="{{item.path}}"></image>
          </view>
        </block>
      </view>
      <view class="uploader__input-box">
        <view bindtap="onChooseImage" class="uploader__input"></view>
      </view>
    </view>
  </view>
</view>
<!-- </view> -->
<view class="title">设置</view>
<view class="cells cells_after-title">
  <text class="thumbNum">点赞数量:</text>
  <slider bindchange="sliderChange" min="22" max="100" show-value blockSize="15"/>
  <view class="cell cell_switch">
    <image src="../../assets/images/icon/comments.png"></image>
    <view class="cell__bd">显示评论</view>
    <view class="cell__ft">
      <switch bindchange="onChangeStatus" checked="{{entity.status == 'publish'}}" />
    </view>
  </view>
  <view class="cell address">
    <image src="../../assets/images/icon/address.png"></image>
    <view class="cell__bd">显示位置</view>
  </view>
</view>

<view class="btn-area">
  <button disabled="{{!entity.content}}" loading="{{loading}}" class="btn" bindtap="onTapSubmitButton" type="primary">{{entity.status?'发表文章':'保存'}}</button>
</view>