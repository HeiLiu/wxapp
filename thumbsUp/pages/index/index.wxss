/**index.wxss**/
.textarea{
  height: 6em;
  font-size: .8em;
}
.title{
  padding: 5rpx 25rpx;
  border-top: 1px solid #ccc; 
  color: #ccc;
  font-size: 28rpx; 
}
.uploader__file:nth-child(3n){
  padding-right: 60rpx;
}
.uploader__file:first-child{
  padding-left: 60rpx;
}
.uploader__file:nth-child(4){
  padding: left 60rpx;
}
.uploader__img, .uploader__input-box{
  width: 200rpx;
  height: 200rpx;
}
.thumbNum{
  padding: 10rpx 25rpx;
  color: #ccc;
  font-size: 28rpx; 
}
.address{
  position: relative;
}
.cell image{
  width: 40rpx;
  height: 40rpx;
  padding-right: 40rpx;
}
.address .cell__bd:after{
  content: "";
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 20rpx;
  right: 40rpx;
  border-top: 2px solid #ccc;
  border-right: 2px solid #ccc;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}
