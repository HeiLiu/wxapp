/* pages/user/user.wxss */
@import '../../styles/weui.wxss';
page,.container{
    background-color: #EDEDED;
    color: #ab956d;
    font-size: 36rpx;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.header{
    background: #ab956d;
    position: relative;
    line-height: 100rpx;
    height: 160rpx;
    padding: 30rpx 30rpx 30rpx 150rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #fff;
}
/* 离开文档流 */
.header .thumb{
    position: absolute;
    top: 30rpx;
    left: 30rpx;
    width: 100rpx;
    height: 100rpx;
    /* display: inline-block; */
    border-radius: 50%;
}
.header .about{
    float: right;
}
.container-in{
    margin-bottom: 20rpx;
}
.address{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    position: relative;
    border-bottom: 1px solid #666;
}

.address:after{
    /* 使用伪元素做箭头 设置伪元素的宽高 然后只给一个角设置边框，再进行旋转*/
    content: '';
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    top: 43%;
    right: 40rpx;
    border-top: 2px solid #666;
    border-right: 2px solid #666;
    transform: rotate(45deg);
}
.weui-cell{
    padding-left:20rpx; 
    background-color: #fff;
}
